<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextView">
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="black" value="8" />
            <flag name="condensed" value="16" />
            <flag name="light" value="32" />
            <flag name="medium" value="64" />
            <flag name="thin" value="128" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ChartView">
        <attr name="gridLineColor" format="reference|color" />
        <attr name="gridLineWidth" format="reference|dimension" />
        <attr name="gridLinesHorizontal" format="reference|integer" />
        <attr name="gridLinesVertical" format="reference|integer" />
        <attr name="leftLabelWidth" format="reference|dimension" />
        <attr name="topLabelHeight" format="reference|dimension" />
        <attr name="rightLabelWidth" format="reference|dimension" />
        <attr name="bottomLabelHeight" format="reference|dimension" />
    </declare-styleable>


    <declare-styleable name="LineChartView">
        <attr name="horizontal_grid_step" format="integer" min="0" />
        <attr name="vertical_grid_step" format="integer" min="0" />
        <attr name="horizontal_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid" format="boolean" />
        <attr name="vertical_grid_sublines" format="boolean" />
        <attr name="horizontal_grid" format="boolean" />
        <attr name="horizontal_grid_sublines" format="boolean" />
        <attr name="horizontal_grid_color" format="color" />
        <attr name="vertical_grid_color" format="color" />
        <attr name="horizontal_grid_sublines_color" format="color" />
        <attr name="vertical_grid_sublines_color" format="color" />
        <attr name="horizontal_grid_thikness" format="dimension" />
        <attr name="vertical_grid_thikness" format="dimension" />
        <attr name="horizontal_grid_sublines_thikness" format="dimension" />
        <attr name="vertical_grid_sublines_thikness" format="dimension" />
        <attr name="horizontal_values" format="boolean" />
        <attr name="vertical_values" format="boolean" />
        <attr name="horizontal_values_color" format="color" />
        <attr name="vertical_values_color" format="color" />
        <attr name="horizontal_values_size" format="dimension" />
        <attr name="vertical_values_size" format="dimension" />
    </declare-styleable>


</resources>